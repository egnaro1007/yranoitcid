<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<TabPane fx:id="settingsPane" maxWidth="1.7976931348623157E308" styleClass="main-pane-tab" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="50.0" tabMinHeight="35.0" tabMinWidth="150.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yranoitcid.frontend.EditorController">
   <tabs>
      <Tab closable="false" styleClass="main-pane-tab" text="Word Editor">
         <content>
            <VBox prefHeight="800.0" prefWidth="1120.0">
               <styleClass>
                  <String fx:value="main-pane" />
               </styleClass>
               <children>
                  <HBox alignment="BOTTOM_LEFT" prefHeight="50.0" prefWidth="1120.0">
                     <children>
                        <TextField fx:id="wordSearchInput" alignment="TOP_LEFT" onKeyTyped="#fetchResult" prefHeight="26.0" prefWidth="180.0">
                           <HBox.margin>
                              <Insets left="22.0" right="22.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="TEXT" />
                           </cursor>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#addWordToDatabase" text="Add Word">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#changeWord" text="Update Word">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#removeWordFromDatabase" text="Delete Word">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Separator>
                  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <ListView fx:id="wordList" prefHeight="200.0" prefWidth="200.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="12.0" />
                           </HBox.margin>
                        </ListView>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="normal-light-text" text="Word">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="wordInput" onKeyTyped="#editInWordField">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="TEXT" />
                                 </cursor>
                              </TextField>
                              <Label text="Word Pronunciation">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                                 <styleClass>
                                    <String fx:value="normal-light-text" />
                                 </styleClass>
                              </Label>
                              <TextField fx:id="pronounInput" onKeyTyped="#editInPronounField">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="TEXT" />
                                 </cursor>
                              </TextField>
                              <Label text="Word Definition(s)">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                                 <styleClass>
                                    <String fx:value="normal-light-text" />
                                 </styleClass>
                              </Label>
                              <TextField fx:id="descInput">
                                 <VBox.margin>
                                    <Insets left="12.0" right="12.0" top="12.0" />
                                 </VBox.margin>
                              </TextField>
                              <HBox fx:id="wordEditorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <HBox>
                                             <children>
                                                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Text" HBox.hgrow="ALWAYS">
                                                   <styleClass>
                                                      <String fx:value="normal-light-text" />
                                                   </styleClass>
                                                </Label>
                                                <Button mnemonicParsing="false" onAction="#switchToHtmlMode" text="Switch To HTML Mode" />
                                             </children>
                                             <VBox.margin>
                                                <Insets left="12.0" right="12.0" top="12.0" />
                                             </VBox.margin>
                                          </HBox>
                                          <TextArea fx:id="textInput" onKeyTyped="#editInTextField" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS">
                                             <VBox.margin>
                                                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                                             </VBox.margin>
                                             <cursor>
                                                <Cursor fx:constant="TEXT" />
                                             </cursor>
                                          </TextArea>
                                       </children>
                                    </VBox>
                                    <VBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <HBox alignment="CENTER_LEFT">
                                             <children>
                                                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="HTML" HBox.hgrow="ALWAYS">
                                                   <styleClass>
                                                      <String fx:value="normal-light-text" />
                                                   </styleClass>
                                                </Label>
                                                <Button mnemonicParsing="false" onAction="#switchToTextMode" text="Switch To Text Mode" />
                                             </children>
                                             <VBox.margin>
                                                <Insets left="12.0" right="12.0" top="12.0" />
                                             </VBox.margin>
                                          </HBox>
                                          <TextArea fx:id="htmlInput" onKeyTyped="#editInHtmlField" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS">
                                             <VBox.margin>
                                                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                                             </VBox.margin>
                                          </TextArea>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab closable="false" styleClass="main-pane-tab" text="About">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="background" />
        </content>
      </Tab>
   </tabs>
</TabPane>
