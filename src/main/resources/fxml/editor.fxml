<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yranoitcid.frontend.EditorController">
   <children>
      <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="wordInput" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="180.0">
               <HBox.margin>
                  <Insets left="22.0" right="22.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" text="Add Word">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Update Word">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Delete Word">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Separator prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Separator>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="wordList" prefHeight="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="12.0" />
               </HBox.margin>
            </ListView>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Word Pronunciation">
                     <VBox.margin>
                        <Insets left="12.0" right="12.0" top="12.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="pronounInput">
                     <VBox.margin>
                        <Insets left="12.0" right="12.0" top="12.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Word Definition(s)">
                     <VBox.margin>
                        <Insets left="12.0" right="12.0" top="12.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="descInput" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
